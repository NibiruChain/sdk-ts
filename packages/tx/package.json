{
  "name": "@nibiruchain/tx",
  "description": "SDK in TypeScript for building Nibiru applications.",
  "version": "0.3.2",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "_moduleAliases": {
    "~tx": "dist"
  },
  "scripts": {
    "postinstall": "npx shx mkdir -p dist && npx link-module-alias",
    "build:watch": "tsc --build -w tsconfig.build.json && link-module-alias",
    "build": "tsc --build tsconfig.build.json && link-module-alias",
    "clean": "tsc --build tsconfig.build.json --clean && npx shx rm -rf coverage *.log junit.xml dist && jest --clearCache",
    "test": "jest",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/unit",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --reporters='jest-junit'",
    "coverage": "jest --coverage",
    "coverage:show": "live-server coverage",
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "dotenv": "^16.0.1",
    "jest": "^28.1.3",
    "link-module-alias": "^1.2.0",
    "shx": "^0.3.2",
    "ts-jest": "^28.0.0-next.3"
  },
  "dependencies": {
    "@cosmjs/encoding": "^0.28.11",
    "@cosmjs/proto-signing": "^0.28.11",
    "@cosmjs/stargate": "^0.28.11",
    "@keplr-wallet/types": "^0.10.13",
    "@nibiruchain/api": "^0.1.2",
    "@nibiruchain/common": "^0.3.2"
  }
}
